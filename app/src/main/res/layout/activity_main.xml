<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_rowWeight="6"
    android:rowCount="6"
    android:layout_columnWeight="4"
    android:columnCount="4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResultado"
        style="@style/Theme.AppCompat.Calculadora.PantallaTotal"
        android:text="0"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="1"
        android:layout_columnSpan="4"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        />

    <!-- BOTONES DE BORRADO -->
    <TextView
        android:id="@+id/tvC"
        android:tag="C"
        android:text="C"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="1dp"
        style="@style/Theme.AppCompat.Calculadora.BotonRojo"
        android:onClick="borrar"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tvCA"
        style="@style/Theme.AppCompat.Calculadora.BotonRojo"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_marginEnd="1dp"
        android:clickable="true"
        android:onClick="borrar"
        android:tag="A"
        android:text="A" />

    <!-- BOTONES DE NUMERACIÃ“N -->
    <TextView
        android:id="@+id/tv7"
        android:tag="7"
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:onClick="printNumber"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tv8"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:layout_width="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:clickable="true"
        android:onClick="printNumber"
        android:tag="8"
        android:text="8" />
    <TextView
        android:id="@+id/tv9"
        android:tag="9"
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:onClick="printNumber"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tv4"
        android:tag="4"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:onClick="printNumber"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/tv5"
        android:tag="5"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:onClick="printNumber"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/tv6"
        android:tag="6"
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="3"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:onClick="printNumber"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tv1"
        android:tag="1"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:onClick="printNumber"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/tv2"
        android:tag="2"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:onClick="printNumber"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/tv3"
        android:tag="3"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="4"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:onClick="printNumber"
        android:clickable="true"
        />


    <TextView
        android:id="@+id/tvPunto"
        android:tag="."
        android:text="."
        android:layout_width="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_row="5"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:onClick="printNumber"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/tv0"
        android:tag="0"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:onClick="printNumber"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tvIgual"
        style="@style/Theme.AppCompat.Calculadora.BotonAzul"
        android:layout_width="wrap_content"
        android:layout_row="5"
        android:layout_column="2"
        android:clickable="true"
        android:onClick="setResultado"
        android:tag="="
        android:text="=" />

    <!-- BOTONES DE OPERADORES -->

    <TextView
        android:id="@+id/tvDividir"
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        style="@style/Theme.AppCompat.Calculadora.BotonRojo"
        android:onClick="setOperador"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tvMultiplicar"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="1dp"
        style="@style/Theme.AppCompat.Calculadora.BotonRojo"
        android:onClick="setOperador"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tvRestar"
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="1dp"
        style="@style/Theme.AppCompat.Calculadora.BotonRojo"
        android:onClick="setOperador"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tvSumar"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_column="3"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:layout_marginTop="1dp"
        style="@style/Theme.AppCompat.Calculadora.BotonRojo"
        android:onClick="setOperador"
        android:clickable="true"
        />

</GridLayout>