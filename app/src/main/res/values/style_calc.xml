<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AppCompat.Calculadora" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.AppCompat.Calculadora.BotonAzul" parent="Theme.AppCompat.Calculadora">
        <item name="android:background">#00537D</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="Theme.AppCompat.Calculadora.BotonRojo" parent="Theme.AppCompat.Calculadora">
        <item name="android:background">#EA4D39</item>
    </style>

    <style name="Theme.AppCompat.Calculadora.PantallaTotal" parent="Theme.AppCompat.Calculadora">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#00537D</item>
    </style>
</resources>